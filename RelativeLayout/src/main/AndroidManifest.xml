<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.edu.zucc.angelroot.toolbardrawerlayout">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="cn.edu.zucc.angelroot.toolbardrawerlayout.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cn.edu.zucc.angelroot.toolbardrawerlayout.LinearActivity"
            android:label="@string/linear_layout" />
        <activity android:name="cn.edu.zucc.angelroot.toolbardrawerlayout.RelativeActivity"></activity>
    </application>

</manifest>